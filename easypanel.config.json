{
  "name": "rest-express-app",
  "description": "Aplicação full-stack React + Express com autenticação",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "deploy": {
    "port": 5000,
    "healthcheck": {
      "path": "/",
      "interval": 30,
      "timeout": 10,
      "retries": 3
    }
  },
  "environment": {
    "required": [
      "DATABASE_URL",
      "SESSION_SECRET"
    ],
    "optional": [
      "VITE_LOGO_URL",
      "VITE_WEBHOOK_URL", 
      "VITE_WHATSAPP_NUMBER"
    ]
  },
  "resources": {
    "memory": "512Mi",
    "cpu": "500m"
  }
}